{
    "command": "ovs_wrapper ovsdb-server /var/lib/openvswitch/conf.db -vconsole:emer -vsyslog:err -vfile:info --remote=punix:/run/openvswitch/db.sock --remote=ptcp:{{ ovsdb_port }}:127.0.0.1 --remote=db:Open_vSwitch,Open_vSwitch,manager_options --log-file=/var/log/kolla/openvswitch/ovsdb-server.log --pidfile",
    "config_files": [
        {% if neutron_ovs_use_certificates %} {
            "source": "{{ container_config_directory }}/root.pem",
            "dest": "/etc/openvswitch/root.pem",
            "owner": "root",
            "perm": "0660"
        },
        {
            "source": "{{ container_config_directory }}/cert.pem",
            "dest": "/etc/openvswitch/cert.pem",
            "owner": "root",
            "perm": "0660"
        },
        {
            "source": "{{ container_config_directory }}/key.pem",
            "dest": "/etc/openvswitch/key.pem",
            "owner": "root",
            "perm": "0660"
        }{% endif %}
    ]
}
