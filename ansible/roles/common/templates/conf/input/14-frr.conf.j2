<source>
  @type tail
  path /var/log/kolla/frr/frr.log
  pos_file /var/run/fluentd/frr.pos
  tag infra.frr
  enable_watch_timer {{ fluentd_enable_watch_timer }}
  <parse>
    @type multiline
    format_firstline /^\d{4}\/\d{2}\/\d{2} \d{2}:\d{2}:\d{2}/
    format1 /^(?<Timestamp>\S+ \S+) (?<Payload>.*)?$/
    time_key Timestamp
    keep_time_key true
    time_format "%Y/%m/%d %H:%M:%S"
  </parse>
</source>
